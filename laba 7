#include <stdio.h>
#include <math.h>

int main() {
    int x1, y1, r1, x2, y2, r2;
    double distance;

    scanf("%d %d %d %d %d %d", &x1, &y1, &r1, &x2, &y2, &r2);

    distance = sqrt(pow(x2 - x1, 2) + pow(y2 - y1, 2));

    if (distance > r1 + r2) {
        printf("0\n");
    } else if (distance == r1 + r2 || distance == fabs(r1 - r2)) {
        printf("1\n");
    } else if (distance < r1 + r2 && distance > fabs(r1 - r2)) {
        printf("2\n");
    } else {
        printf("-1\n");
    }

    return 0;
}
